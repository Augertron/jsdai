<project name="buckminster" default="nodefault">
    <description>
        Buckminster ant build file
    </description>

	
    <!-- ================================= 
          target: buckminster.prebind.jars
         ================================= -->
    <target name="buckminster.prebind.jars" description="--> Prebind actions">
    	<mkdir dir="${sp:output}"/>
    	<buckminster.copy todir="${sp:output}">
    		<buckminster.filesetgroup value="${fs:input}"/>
    	</buckminster.copy>
    </target>

    <!-- ================================= 
          target: buckminster.refresh
         ================================= -->
    <target name="buckminster.refresh" description="--> Refresh actions">
    	<buckminster.delete>
    		<buckminster.filesetgroup value="${fs:input}"/>
    	</buckminster.delete>
    </target>

    <!-- ================================= 
          target: nodefault
         ================================= -->
    <target name="nodefault">
        <fail>
        	There is no default target
    	</fail>
    </target>

</project>
